{
  "version": 1,
  "source": "dofusdb",
  "entity": "item-super-type",
  "label": "Super-types d'objets",
  "meta": {
    "catalogOnly": true,
    "description": "Liste unique des superTypes DofusDB, dérivée de l'endpoint /item-types (groupement par superTypeId). Pas d'endpoint dédié.",
