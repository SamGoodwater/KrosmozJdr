  "endpoints": {
    "fetchOne": {
      "pathTemplate": "/item-types/{id}",
      "method": "GET",
      "queryDefaults": { "lang": "{lang}" }
    },
    "fetchMany": {
      "path": "/item-types",
      "method": "GET",
      "queryDefaults": { "lang": "{lang}", "$limit": 50, "$skip": 0 }
    }
  },
  "filters": {
    "supported": []
  },
  "target": { "krosmozEntity": "item-super-type", "catalogOnly": true },
  "mapping": [
    { "key": "id", "from": { "path": "id" }, "to": [] },
    { "key": "name", "from": { "path": "name", "langAware": true }, "to": [] }
  ]
